<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SkillApp.MainPage"
             BackgroundColor="#F3F2FF">

    <ScrollView>

        <VerticalStackLayout Spacing="20" HorizontalOptions="Center">

            <Image
                Source="main_page_rectangle.png"
                HeightRequest="385"
                WidthRequest="275"
                Aspect="Fill"/>

            <Label
                    HeightRequest="20"/>

            <Button
                x:Name="NewBtn"
                CornerRadius="10"
                HeightRequest="20"
                WidthRequest="240"
                Text="New"
                FontFamily="InterRegular"
                FontSize="13"
                FontAutoScalingEnabled="True"
                TextColor="#F3F2FF"
                BackgroundColor="#7355FF"
                Clicked="NavigateBroadRequestPage"
                HorizontalOptions="Fill">
                <Button.Shadow>
                    <Shadow Brush="Black"
                            Offset="0,5"
                            Radius="3"
                            Opacity="0.3" />
                </Button.Shadow>
            </Button>

            <Button
                x:Name="ContBtn"
                CornerRadius="10"
                HeightRequest="20"
                WidthRequest="240"
                Text="Continue" 
                FontFamily="InterRegular"
                FontSize="13"
                FontAutoScalingEnabled="True"
                TextColor="#7355FF"
                BackgroundColor="#F3F2FF"
                BorderColor="#7355FF"
                BorderWidth="1"
                HorizontalOptions="Fill">
                <Button.Shadow>
                    <Shadow Brush="Black"
                            Offset="0,5"
                            Radius="3"
                            Opacity="0.3" />
                </Button.Shadow>
            </Button>
            
        </VerticalStackLayout>
        
    </ScrollView>

</ContentPage>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SkillApp.RoadmapPage"
             BackgroundColor="#201452">

    <VerticalStackLayout HorizontalOptions="Center" Spacing="20">

        <Label/>

        <Entry x:Name="entry"
               Placeholder="I would like to learn how to ..."
               TextColor="White"/>

        <Button
            x:Name="NewBtn"
            CornerRadius="10"
            HeightRequest="50"
            WidthRequest="220"
            FontFamily="TekoRegular"
            FontSize="30"
            FontAutoScalingEnabled="True"
            TextColor="#bfc5ff"
            BackgroundColor="#452FA8"
            SemanticProperties.Hint="Create new roadmap"
            HorizontalOptions="Center"
            Text="Create roadmap" 
            Clicked="OnAddLabelClicked" />

        <Entry x:Name="numbOfSteps"
               Placeholder="Number of steps"
               TextChanged="OnEntryTextChangedSteps"
               TextColor="White"/>

        <Entry x:Name="stepContent"
               Placeholder="Step content"
               TextChanged="OnEntryTextChangedContent"
               TextColor="White"/>

        <FlexLayout Direction="Row" x:Name="labelStackLayout">

        </FlexLayout>

    </VerticalStackLayout>
    
</ContentPage>